{
  "name": "finastra-design-system-monorepo",
  "private": true,
  "description": "Finstra design system web components",
  "repository": {},
  "license": "MIT",
  "workspaces": [
    "packages/uxg-components/*"
  ],
  "scripts": {
    "build": "yarn build:styling && yarn build:ts",
    "build:styling": "./scripts/build-styling.sh",
    "build:ts": "tsc --build",
    "clean": "yarn clean:ts && yarn clean:styles && yarn run clean:scripts",
    "clean:scripts": "del-cli scripts/tsc-out",
    "clean:styles": "del-cli packages/**/*-css.ts packages/**/*.css packages/**/*.css.map",
    "clean:ts": "yarn build:ts --clean && del-cli packages/**/*.d.ts packages/**/*.js",
    "lint": "yarn lint:ts && yarn lint:lit",
    "lint:fix": "yarn lint:ts -- --fix && yarn lint:lit -- --fix",
    "lint:lit": "lit-analyzer \"packages/**/*.ts\" --strict",
    "lint:ts": "eslint \"packages/**/*.ts\"",
    "serve": "wds",
    "serve:tools": "nodemon ./node_modules/@web/dev-server/dist/bin.js -c ./tools/web-dev-server.tools.mjs",
    "storybook": "wds -c .storybook/server.mjs",
    "test" : "node ./scripts/test.js",
    "test:debug": "node ./scripts/test-debug.js",
    "watch": "",
    "watch:styling": "yarn build:styling && node ./scripts/watch-styling.js",
    "watch:ts": "tsc --build --watch --preserveWatchOutput",
    "watch:ts-project": "tsc --watch --preserveWatchOutput -p"
  },
  "dependencies": {
    "@material/mwc-icon": "^0.20.0",
    "@material/mwc-icon-button": "0.20.0",
    "@material/mwc-list": "^0.20.0",
    "@material/mwc-top-app-bar": "^0.20.0",
    "@material/mwc-top-app-bar-fixed": "^0.20.0",
    "lit-analyzer": "1.2.1"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "1.9.4",
    "@open-wc/eslint-config": "4.2.0",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "@web/dev-server": "0.1.8",
    "@web/dev-server-storybook": "0.3.5",
    "concurrently": "5.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-lit-a11y": "^1.0.1",
    "eslint-plugin-wc": "^1.3.0",
    "globby": "^11.0.2",
    "husky": "4.3.8",
    "install": "^0.13.0",
    "koa-ejs": "4.3.0",
    "lint-staged": "10.5.3",
    "node-sass-import": "2.0.1",
    "node-watch": "^0.7.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rollup": "2.38.5",
    "tslib": "2.1.0",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=10.19.0"
  }
}
