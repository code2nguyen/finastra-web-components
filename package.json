{
  "name": "finastra-design-system-monorepo",
  "private": true,
  "description": "Finstra design system web components",
  "repository": {},
  "license": "MIT",
  "workspaces": [
    "packages/uxg-components/*"
  ],
  "scripts": {
    "clean": "yarn clean:typescript && yarn clean:styles && yarn run clean:scripts",
    "clean:typescript": "yarn build:typescript --clean",
    "clean:styles": "del-cli packages/**/*-css.ts packages/**/.css packages/*/.css.map",
    "clean:scripts": "del-cli scripts/tsc-out",
    "clean:dependencies": "del-cli packages/**/node_modules && rm -rf node_modules",
    "lint": "npm run lint:typescript && npm run lint:lit",
    "lint:fix": "npm run lint:typescript -- --fix && npm run lint:lit -- --fix",
    "lint:typescript": "eslint \"packages/**/*.ts\"",
    "lint:lit": "lit-analyzer \"packages/**/*.ts\" --strict",
    "build:typescript": "tsc --build",
    "build:styling": "./scripts/build-styling.sh",
    "build": "yarn build:styling && yarn build:typescript",
    "watch:styling": "yarn build:styling && node ./scripts/watch-styling.js",
    "watch:typescript": "tsc --watch -p",
    "serve": "wds",
    "test" : "node ./scripts/test.js",
    "test:debug": "node ./scripts/test-debug.js"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "4.2.0",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "@web/dev-server": "0.1.5",
    "del-cli": "3.0.1",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "node-sass-import": "2.0.1",
    "node-watch": "^0.7.1",
    "prettier": "^2.2.1",
    "tslib": "2.1.0",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=10.19.0"
  },
  "dependencies": {
    "lit-analyzer": "1.2.1"
  }
}
